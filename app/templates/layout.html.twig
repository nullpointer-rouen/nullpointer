{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href={{ asset('css/styles.css') }}>

{% endblock %}

{% block javascripts %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}
<header class="container-fluid border-bottom bg-light shadow-sm">
    {{ include('_topbar.html.twig') }}
</header>

<main class="container flex-grow-1 border-left border-right bg-white p-5">
    {% block content %}<h1>{% trans %}Content{% endtrans %}</h1>{% endblock %}
</main>

<footer class="container-fluid bg-dark mt-auto">
    {{ include('_footer.html.twig') }}
</footer>
{% endblock %}
